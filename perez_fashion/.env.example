# Database Configuration
# SQLite database file location (relative to project root)
DATABASE_URL="file:./data/db.sqlite"

# Authentication
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET="change-this-to-a-random-secret-string"
NEXTAUTH_URL="http://localhost:3000"

# Production URLs (update when deploying)
# NEXTAUTH_URL="https://perezfashion.com"

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,image/jpg"

# Optional: Admin Configuration (for initial setup)
ADMIN_EMAIL="contact@perezfashion.com"
ADMIN_NAME="Mary Perez"
