        }

        .contact-info {
            text-align: center;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 2px solid var(--gray-light);
        }

        .contact-info p {
            margin: 0.5rem 0;
            color: var(--gray-medium);
        }

        .contact-info a {
            color: var(--neon-teal);
            text-decoration: none;
            font-weight: 600;
        }

        /* Footer */
        footer {
            background: var(--deep-space);
            color: var(--white);
            padding: 3rem 0 1rem;
            text-align: center;
        }

        footer p {
            opacity: 0.8;
        }

        footer a {
            color: var(--neon-teal);
            text-decoration: none;
        }

        /* Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Mobile Responsive */
        @media (max-width: 768px) {
            h1 { font-size: 2rem; }
            h2 { font-size: 1.75rem; }

            nav ul {
                display: none;
            }

            .hero {
                padding: 4rem 0;
            }

            .hero .btn-group {
                flex-direction: column;
            }

            section {
                padding: 3rem 0;
            }

            .about-content {
                grid-template-columns: 1fr;
                gap: 2rem;
            }

            .services-grid,
            .deliverables-grid,
            .tiers-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
