        }

        /* Contact Section */
        .contact {
            background: var(--gray-light);
        }

        .contact h2 {
            text-align: center;
        }

        .contact-content {
            max-width: 600px;
            margin: 3rem auto 0;
            background: var(--white);
            padding: 3rem;
            border-radius: 10px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
