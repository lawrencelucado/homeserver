# Global stack settings (Docker Compose uses this file)
COMPOSE_PROJECT_NAME=marketsense_stack

# Core services
POSTGRES_USER=admin
POSTGRES_PASSWORD=change_me
POSTGRES_DB=marketsense
POSTGRES_PORT=5432

# Service ports (host)
FASTAPI_PORT=8000
NEXTJS_PORT=3000
AIRFLOW_PORT=8080
SUPERSET_PORT=8088

# URLs (internal service names are used inside Compose network)
API_URL=http://fastapi:8000
FRONTEND_URL=http://nextjs:3000
SUPERSET_URL=http://superset:8088
DATABASE_URL=postgresql://admin:change_me@postgres:5432/marketsense

# Security
JWT_SECRET=please_change
JWT_ALGORITHM=HS256
SUPERSET_SECRET_KEY=please_change
CORS_ORIGINS=http://localhost:3000

# Stripe (test mode by default)
STRIPE_LIVE_MODE=false
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# Airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://admin:change_me@postgres/marketsense

# Optional domains (for reverse proxy)
PUBLIC_API_ORIGIN=
PUBLIC_APP_ORIGIN=
